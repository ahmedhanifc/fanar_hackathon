{{!-- templates/chat.handlebars --}}
{{#extend "layouts/main"}}
  {{#content "body"}}
    <div class="chat-container">
      <h2>Chatbot Conversation</h2>
      <div id="chat-history">
        {{#each conversation}}
          <div class="message {{this.role}}">
            <strong>{{this.role}}:</strong> {{this.content}}
          </div>
        {{/each}}
      </div>
      <form id="chat-form" method="POST" action="/chat/send">
        <input type="hidden" name="conversationId" value="{{conversationId}}">
        <input type="text" name="message" placeholder="Type your message..." autocomplete="off" required>
        <button type="submit">Send</button>
      </form>
    </div>
  {{/content}}
{{/extend}}
