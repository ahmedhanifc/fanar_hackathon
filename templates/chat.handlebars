<div class="chat-container">
    <div class="chat-header">
        <h1>Fanar Legal Assistant</h1>
        <p class="chat-subtitle">Your AI-powered guide through legal processes</p>
    </div>
    
    <div class="chat-messages" id="chat-messages">
        <!-- Messages will be added here dynamically -->
        <div class="message bot">
            <div class="message-content">
                Hello! I'm Fanar, your legal assistant. How can I help you today?
            </div>
        </div>
    </div>
    
    <div class="chat-input">
        <form id="chat-form">
            <input type="text" id="user-message" placeholder="Type your message..." autocomplete="off">
            <button type="submit" id="send-button">
                <span>Send</span>
            </button>
        </form>
    </div>
</div>

<script src="/js/chat-simple.js"></script>
